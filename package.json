{
	"name": "yar-goto-laravel-components",
	"displayName": "A Laravel Goto Components",
	"description": "Laravel Goto Components is a Visual Studio Code extension that allows you to quickly jump to components in your Laravel project.",
	"icon": "logo.png",
	"version": "1.1.1",
	"publisher": "YaroslavHoroh",
	"repository": "https://github.com/yarhoroh/goto-laravel-components",
	"engines": {
		"vscode": "^1.80.0"
	},
	"categories": [
		"Other",
		"Debuggers"
	],
	"keywords": [
        "PHP",
        "Laravel",
		"Laravel goto components",
		"goto components",
		"Laravel goto component",
		"component",
		"goto component",
		"goto",
		"go to",
		"Laravel goto",
		"Laravel component",
		"Laravel components"
    ],
	"activationEvents": [
        "onLanguage:blade"
    ],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
            "type": "object",
            "title": "Laravel goto components configuration",
            "properties": {
                "yar_laravel_goto_components.regex": {
                    "type": "string",
                    "default": "(?<=<x-|</x-)(?!slot)[^\\/\\s>]+",
                    "description": "Custom regex for matching components"
                },
                "yar_laravel_goto_components.custom_path": {
                    "type": "string",
	                  "default": "",
                    "description": "Custom path for components"
                }
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.80.0",
		"typescript": "^5.1.6",
		"ts-loader": "^9.4.4",
		"webpack": "^5.88.1",
		"webpack-cli": "^5.1.4"
	}
}
